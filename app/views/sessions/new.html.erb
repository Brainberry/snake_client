<%= form_for @user_session, :as => :user_session, :url => session_path do |f| %>
  <%= f.label :login, 'Email' %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password, :autocomplete => 'off' %><br />
  <br />
  <%= f.label :remember_me %><br />
  <%= f.check_box :remember_me %><br />
  
  <%= link_to t('password.new'), new_password_path %><br />
  
  <%= f.submit "Login" %>
<% end %>

